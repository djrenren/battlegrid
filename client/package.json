    "typescript": "^4.7.4",
    "web-streams-polyfill": "^3.2.1",
    "wrtc": "^0.4.7"
  },
  "type": "module",
  "jest": {
    "testMatch": [
      "<rootDir>/**/*.test.{ts,tsx,js,jsx}",
      "<rootDir>/*.test.{ts,tsx,js,jsx}"
    ],
    "collectCoverage": true,
    "moduleFileExtensions": [
