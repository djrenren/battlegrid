{
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/jest": "^27.5.2",
    "abortcontroller-polyfill": "^1.7.3",
    "blob-polyfill": "^7.0.20220408",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "jest-environment-node": "^28.1.2",
    "prettier": "2.5.1",
    "rollup": "^2.75.7",
